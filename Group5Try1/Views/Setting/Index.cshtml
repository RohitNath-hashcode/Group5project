@model Group5Try1.Models.Setting
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
ViewData["Title"] = "Setting";
}

<script>
    $(document).ready(function () {
        //let txtvalue = "";
        //txtvalue = $("#txtSearch").val();
        let url = "/Api/new/ShowAll";
        let options = {
            type: "GET",
            url: url,
            //dataType: "application/json",
            success: mySuccess,
            error: myError
                

        $.ajax(options);
        });

        function mySuccess(data) {
          //alert(JSON.stringify(data))
            let result = $("#result");
            result.empty();
            result.append(result);
            }
            
        }
        function myError(err,status) {
            alert(err.responseText);
        }
    });
</script>

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-header bg-danger text-white">
            <h5 class="text-uppercase text-center">Regirtation Form</h5>
            </div>
            <div class="card-body">
                <form action="Api/new/UpdateAccount" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="PImage">Profile Image</label>
                        <input type="file" id="PImage" name="PImage" asp-for="PImage" class="form-control" required/>
                        <span asp-validation-for="PImage" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name">Name</label>
                        <input type="text" id="Name" name="Name" asp-for="Name" class="form-control" required/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email">Email</label>
                        <input type="email" id="Email" name="Email" asp-for="Email" class="form-control" required/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PhNumber">Phone Number</label>
                        <input type="number" id="PhNumber" name="PhNumber" asp-for="PhNumber" class="form-control" required/>
                        <span asp-validation-for="PhNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Speciality_id">Speciality</label>

                        <select class="form-control" id="Speciality_id" name="Speciality_id" asp-for="Speciality_id" required>
                            <option value="1">Speciality 1</option>
                            <option value="2">Speciality 2</option>
                            <option value="3">Speciality 3</option>
                        </select>
                        <span asp-validation-for="Speciality_id" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="NPI_No">NPI Number</label>
                        <input type="text" id="NPI_No" name="NPI_No" asp-for="NPI_No" class="form-control" />
                        <span asp-validation-for="NPI_No" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PLocation_id">Practice Location</label>
                        <select class="form-control" id="PLocation_id" name="PLocation_id" asp-for="PLocation_id">
                            <option value="1">Location 1</option>
                            <option value="2">Location 2</option>
                        </select>
                        
                        <span asp-validation-for="PLocation" class="text-danger"></span>
                    </div>


                    <input type="submit" value="Register" class="btn btn-sm btn-success text-uppercase rounded-0" />
                </form>
            </div>
        </div>
    </div>
</div>

<div id="result">

</div>
